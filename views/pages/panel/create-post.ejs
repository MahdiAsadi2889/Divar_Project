<div class="col-lg-12 d-flex align-items-stretch">
  <div class="card w-100">
    <%if(showBack){%>
    <div class="p-3">
      <a href="/post/create" class="btn btn-danger">بازگشت به همه ی دسته ها</a>
    </div>
    <%}%>
    <div class="p-3">
      <%if(!options){%> 
        <%if(categories && categories.length > 0){%>
            <ul>
            <%categories.forEach(category => {%>
            <li>
              <a
                href="/post/create?slug=<%=category.slug%>"
                class="w-100 p-3 d-block bg-light text-dark"
              >
                <span
                  class="ti ti-<%=category.icon%> nav-small-cap-icon fs-4"
                ></span>
                <span><%=category.name%></span>
              </a>
            </li>
            <%})%>
          </ul>
        <%}%> 
      <%}else{%>
        <form action="/post/create" method="post" enctype="multipart/form-data">
          <div class="p-2">
            <label class="p-2">انتخاب آدرس</label>
            <!-- نمایش نقشه -->
            <div id="map" style="width: 100%; height: 400px; border-radius: 8px;"></div>
          
            <!-- فیلدهای پنهان برای ذخیره مختصات -->
            <input type="hidden" id="lat" name="latitude" />
            <input type="hidden" id="lng" name="longitude" />
            <input type="hidden" id="category" name="category" value="<%=category%>"/>
          </div>
          <div class="p-2">
            <label class="p-2">تصاویر آگهی</label>
            <input type="file" name="images" multiple class="form-control">
          </div>
          <div class="p-2">
            <label class="p-2">عنوان آگهی * </label>
            <input type="text" name="title_post" class="form-control" placeholder="عنوان آگهی">
          </div>
          <div class="p-2">
            <label class="p-2">توضیحات آگهی * </label>
            <textarea name="description" class="form-control" placeholder="توضیحات آگهی"></textarea>
          </div>
          <%options.forEach(option => {%>
            <label class="p-2"><%=option.title%><%=option.required? " * ": ""%></label>
            <%if(option.type === "array"){%>
              <div class="p-2">
                <select name="<%=option.title%>" class="form-select">
                  <%option.enum.forEach(item => {%>
                    <option value="<%=item%>"><%=item%></option>
                  <%})%>
                </select>
              </div>
            <%}else{%>
              <div class="p-2">
                <input type="text" name="<%=option.title%>" class="form-control" placeholder="<%=option.guid%>">
              </div>
            <%}%>
          <%})%>
          <button type="submit" class="btn btn-success">انتشار آگهی</button>
        </form>
      <%}%>
    </div>
  </div>
</div>
